
echo "AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}" > admin.env
echo "AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}" >> admin.env

PROFILE=serverless-starter_dev
CREDENTIALS=~/.aws/credentials

echo "[${PROFILE}]" > ${CREDENTIALS}
echo "aws_access_key_id=${AWS_ACCESS_KEY_ID}" >> ${CREDENTIALS}
echo "aws_secret_access_key=${AWS_SECRET_ACCESS_KEY}" >> ${CREDENTIALS}

cat ${CREDENTIALS}

REGION=ap-northeast-1
PROJECT=circleci
STAGE=dev

slss project remove

aws --region ${REGION} cloudformation describe-stacks --stack-name ${PROJECT}-${STAGE}-r
sleep 10

slss project init -p ${PROFILE} -s ${STAGE} -r ${REGION}

